
  <div class="container" align="center">
    <h1>Gym Workout Schedule</h1>
  <div class="jumbotron">


<table>
  <tr>
    <th style="color:black">Workout</th>
    <th style="color:black">Action1</th>
    <th style="color:black">Action2</th>
    <th style="color:black">Action3</th>
  </tr>

  <% @workouts.each do |workout| %>
    <tr>

      <td><%= workout.workout %></td>
      <td><%= link_to 'Show', workout_path(workout) %></td>

      <td><%= link_to 'Edit', edit_workout_path(workout) %></td>

      <td><%= link_to 'Delete', workout_path(workout), method: :delete, data: { confirm: 'Are you sure you want to delete the record?' }  %></td>
      </tr>
  <% end %>
</table>

</div>
</div>
